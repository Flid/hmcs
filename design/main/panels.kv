#:import GamePanel game.gui.panel.GamePanel

<GamePanel>:
    field_size: field_size

    canvas:
        Color:
            rgb: 0.5, 0.5, 0.5
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        size_hint: 0.9, 0.1
        pos_hint: {'x': 0.05, 'top': 0.95}
        text: 'Main Menu'
        on_press:
            app.switch_screen('menu_main')

    TextInput:
        id: field_size
        text: '3'
        size_hint: 0.9, 0.1
        pos_hint: {'x': 0.05, 'top': 0.8}

    Button:
        size_hint: 0.9, 0.1
        pos_hint: {'x': 0.05, 'top': 0.65}
        text: 'Start'
        on_press:
            root.parent.parent.board.render_hexagons(int(root.field_size.text))
