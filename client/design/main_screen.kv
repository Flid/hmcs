#:import LCDControlSwitchOff hmcs.gui.main.LCDControlSwitchOff
#:import LullabyControlSwitchOn hmcs.gui.main.LullabyControlSwitchOn
#:import LullabyControlSwitchOff hmcs.gui.main.LullabyControlSwitchOff
#:import BluetoothConnectButton hmcs.gui.main.BluetoothConnectButton
#:import ErrorLabel hmcs.gui.main.ErrorLabel

<MainScreen>:
    id: main_screen

    RelativeLayout:
        id: main_area
        size_hint: 1, 1
        pos_hint: {'x': 0, 'y': 0}

        canvas:
            Color:
                rgb: 0.4, 0.4, 0.6

            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            size_hint: 0.8, 0.1
            pos_hint: {'x': 0.1, 'y': 0.9}
            text: 'Baby Magnet:'
            font_size: '20sp'

        Slider:
            id: brightness_slider

            size_hint: 0.8, 0.05
            pos_hint: {'x': 0.1, 'y': 0.87}
            min: 0
            max: 100
            value: 70
            step: 1


        LCDControlSwitchOn:
            brightness_slider: brightness_slider
            text: 'On'
            size_hint: 0.35, 0.1
            pos_hint: {'x': 0.1, 'y': 0.75}

        LCDControlSwitchOff:
            brightness_slider: brightness_slider
            text: 'Off'
            size_hint: 0.35, 0.1
            pos_hint: {'x': 0.55, 'y': 0.75}

        BluetoothConnectButton:
            text: 'BT On'
            size_hint: 0.25, 0.1
            pos_hint: {'x': 0.1, 'y': 0.6}

        LullabyControlSwitchOn:
            text: 'On'
            size_hint: 0.25, 0.1
            pos_hint: {'x': 0.37, 'y': 0.6}

        LullabyControlSwitchOff:
            text: 'Off'
            size_hint: 0.25, 0.1
            pos_hint: {'x': 0.65, 'y': 0.6}

        ErrorLabel:
            id: error_label
            size_hint: 0.8, 0.1
            pos_hint: {'x': 0.1, 'y': 0.2}
            text: ''
            color: 0.8, 0.2, 0.2, 1
            font_size: '20sp'

        Button:
            text: 'Settings'
            size_hint: 0.8, 0.1
            pos_hint: {'x': 0.1, 'y': 0.03}
            on_press:
                app.switch_screen('settings')
