#:import LCDControlSwitchOn hmcs.gui.main.LCDControlSwitchOn
#:import LCDControlSwitchOff hmcs.gui.main.LCDControlSwitchOff

<MainScreen>:
    id: main_screen

    RelativeLayout:
        id: main_area
        size_hint: 1, 1
        pos_hint: {'x': 0, 'y': 0}

        canvas:
            Color:
                rgb: 0.4, 0.4, 0.6

            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            size_hint: 0.8, 0.1
            pos_hint: {'x': 0.1, 'y': 0.9}
            text: 'Baby Magnet:'
            font_size: '20sp'

        LCDControlSwitchOn:
            text: 'On'
            size_hint: 0.35, 0.1
            pos_hint: {'x': 0.1, 'y': 0.75}

        LCDControlSwitchOff:
            text: 'Off'
            size_hint: 0.35, 0.1
            pos_hint: {'x': 0.55, 'y': 0.75}

        Button:
            text: 'Settings'
            size_hint: 0.8, 0.1
            pos_hint: {'x': 0.1, 'y': 0.03}
            on_press:
                app.switch_screen('settings')
